<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:background="@color/announcementBackground"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/Image"
      android:src="@drawable/ic_toggl_track_logotype_stacked_pink_rgb"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:scaleType="centerInside" />

  <TextView
      android:id="@+id/Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:fontFamily="sans-serif-medium"
      android:textColor="@color/announcementText"
      android:textSize="18sp"
      tools:text="Save 20% on Annual Plans" />

  <TextView
      android:id="@+id/Message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginRight="8dp"
      android:gravity="center"
      android:maxWidth="230dp"
      android:textColor="@color/announcementText"
      android:textSize="16sp"
      tools:text="Upgrade to any annual plan and pocket some extra cash just in time for the holiday season!" />

  <Button
      android:id="@+id/MainActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="40dp"
      android:layout_marginRight="24dp"
      android:fontFamily="sans-serif-medium"
      android:minWidth="230dp"
      android:minHeight="36dp"
      android:textColor="#ffffff"
      android:backgroundTint="@color/announcementButton"
      tools:text="Learn More" />

  <TextView
      android:id="@+id/DismissButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="16dp"
      android:layout_marginRight="24dp"
      android:layout_marginBottom="16dp"
      android:gravity="center"
      android:textColor="@color/announcementText"
      android:background="@android:color/transparent"
      android:fontFamily="sans-serif-medium"
      android:minWidth="230dp"
      android:minHeight="36dp"
      tools:text="Dismiss" />

</LinearLayout>